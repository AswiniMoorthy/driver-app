#:import utils kivy.utils
#:include homemapview.kv

<HomeScreen>:
    FloatLayout:
        MDToolbar:
            title: "Where are you going today?"
            right_action_items: [['magnify', lambda x: app.search_menu.open()]]
            md_bg_color: app.theme_cls.primary_light
            pos_hint: {"top": .895, "left": 1.5}
            size_hint: 1, .1
         
    
        HomeMapView:
            pos_hint: {"top": .795, "left": 1}
            size_hint: 1, .695
            id: mapview
            Label:
                id:text
        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}

            LabelButton:
                text: "[u]route[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": 1}
                markup: True
                on_release:
                    app.change_screen("route_screen", direction='down', mode='push')
            LabelButton:
                text: "[u]facilites[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": 1}
                markup: True
                on_release:
                    app.change_screen("tata_screen", direction='up', mode='push')
            